            }
            .form-group label {
                font-weight: 600;
                margin-bottom: 5px;
                color: #222;
                display: block;
            }
            .form-group input,
            .form-group textarea,
            .form-group select {
                width: 100%;
                padding: 8px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 14px;
            }
            .form-actions {
